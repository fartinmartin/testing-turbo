{
	"compilerOptions": {
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"target": "ES2015",
		"paths": {
			"@client/*": ["./src/client/*"],
			"@host/*": ["./src/host/*"],
			"@vite/*": ["./src/vite/*"]
		}
	},
	"include": ["src/*"],
	"exclude": ["node_modules"]
}
